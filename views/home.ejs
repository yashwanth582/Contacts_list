<html>
    <head>
        <title>
            <%= title %>
        </title>
        <script src="https://kit.fontawesome.com/58438cdb32.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fa fa-address-book" aria-hidden="true"></i>
            My Contact List</h1>
        <div id="contacts-list-container">
             
            <ul>
        <% for (let i of contacts_list){%>
                        <li class="contacts">
                            <div class="details"> 
                             <span>  <%= i.name %>  </span> 
                              <span> <%= i.phone %>  </span>
                            </div>
                            <div class="delete-button">
                                <!--  while deleting we'll check id of the object because it will be unique-->
                                <!-- below line--delete-contact while displaying the object on screen in developer tools elements each object will have a unique separate id- where we can use it for deleting the element -->
                                <!-- _id-> this is id of the element in database mongoDb -->
                                <a href="/delete-contact/?id=<%= i._id %>">
                                    <!-- above text will act like link and is collected on ejs file-index.js  -->
                                    <i class="fa fa-window-close" aria-hidden="true"></i>
                                </a>
                            </div>
                        </li>
                <%} %>
            </ul>
        </div>
        <form id="new-contact-form" action="/create-contact" method="post">
            <input type="text" name="name" placeholder="Enter name:" required>
            <input type="number" name="phone" placeholder="Enter Phone">
            <button type="submit">Add Contact</button>
        </form>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>